{
  "name": "user-graphql-service",
  "version": "1.0.0",
  "description": "GraphQL service wrapping User gRPC service",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "watch": "ts-node-dev --respawn src/index.ts",
    "proto:generate": "mkdir -p src/generated && protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --js_out=import_style=commonjs,binary:src/generated --ts_out=service=grpc-web:src/generated --proto_path=../backend/src/main/proto ../backend/src/main/proto/*.proto"
  },
  "dependencies": {
    "apollo-server-express": "^3.12.1",
    "@apollo/federation": "^0.38.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "@grpc/grpc-js": "^1.9.2",
    "@grpc/proto-loader": "^0.7.8",
    "google-protobuf": "^3.21.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/google-protobuf": "^3.15.12",
    "grpc-tools": "^1.12.4",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
